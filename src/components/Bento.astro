<script>
    const images = [
        "/winetracker_logo.webp",
        "/wine1.png",
        "/wine2.png",
        "/wine3.png",
        "/wine4.png",
        "/wine5.png",
        "/wine6.png"
    ];
    let currentIndex = 0;

    document.getElementById('btn-images')?.addEventListener('click', () => {
      const carousel = document.getElementById('carousel') as HTMLElement;
      carousel.classList.remove('hidden');
    });

    document.getElementById('cerrar-image')?.addEventListener('click', () => {
      const carousel = document.getElementById('carousel') as HTMLElement;
      carousel.classList.add('hidden');
    });


    document.getElementById('next-image')?.addEventListener('click', () => {
     currentIndex = (currentIndex + 1 + images.length) % images.length;
        (document.getElementById('carousel-image')! as HTMLImageElement).src = images[currentIndex];
    });

    document.getElementById('prev-image')?.addEventListener('click', () => {
       currentIndex = (currentIndex - 1) % images.length;
        (document.getElementById('carousel-image')! as HTMLImageElement).src = images[currentIndex];
    });

   
</script>

